<Page x:Class="Desktop_TNS.Forms.CRM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop_TNS.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CRM">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Width="140">
            <TextBox x:Name="tbTel"/>
            <TextBox x:Name="tbLastName"/>
            <Button Content="Add" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btClick"/>
        </StackPanel>
    </Grid>
</Page>
